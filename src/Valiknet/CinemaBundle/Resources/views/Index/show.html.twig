{% extends 'ValiknetCinemaBundle:layouts:layout.html.twig' %}

{% block title %}
    Головна сторінка
{% endblock %}

{% block content %}
    <div class="col-lg-12">
        <h3>Найближчі релізи</h3>
        {% set targetDate = '' %}
        {% for movie in movies %}
            <div class="col-lg-12 thumbnail">
                <div class="col-lg-12">
                    {% if (targetDate != movie.releasedAt|date('Y-m-d')) %}
                        {% set targetDate = movie.releasedAt|date('Y-m-d') %}
                        <h3>{{ movie.releasedAt|date('Y-m-d') }}</h3>
                    {% endif %}
                </div>

                <div class="col-lg-12">
                    <h4>
                        <a href="{{ path("valiknet_movie_index", {"slug":movie.slug}) }}">
                            {{ movie.name }}
                        </a>
                    </h4>
                </div>

                <div class="col-lg-4">
                    <img src="{{ movie.posters[0].url }}" />
                </div>

                <div class="col-lg-8">
                    Країна: <a href="{{ path('valiknet_country_index', {'slug' : movie.country.slug, 'section' : 'movies'}) }}">{{ movie.country.name  }}</a>
                </div>

                <div class="col-lg-8">
                    Категорії:
                    {% for category in movie.categories %}
                        <a href="{{ path('valiknet_category_index', {"slug":category.slug}) }}">{{ category.name }}</a>
                    {% endfor %}
                </div>

                <div class="col-lg-8">
                    Режисер: <a href="">{{ movie.producer.name }} {{ movie.producer.surname }}</a>
                </div>

                <div class="col-lg-8">
                    Актори:
                    {% for actor in movie.actors %}
                        <a href="{{ path("valiknet_actor_index", {"slug" : actor.slug}) }}">{{ actor.name }} {{ actor.surname }}</a>
                    {% endfor %}
                </div>

                <div class="col-lg-8">
                    <p>{{ movie.description }}</p>
                </div>

                <div class="col-lg-8">
                    <div class="btn btn-success">
                        Подобається: <b>{{ movie.like }}</b>
                    </div>

                    <div class="btn btn-danger">
                        Не подобається: <b>{{ movie.dislike }}</b>
                    </div>
                </div>

                <div class="col-lg-8">
                    Кількість рецензій {{ movie.reviews|length }}
                </div>
            </div>
        {% else %}
            <h3>На жаль, в даний момент нових релізів не очікується</h3>
        {% endfor %}
    </div>
{% endblock %}