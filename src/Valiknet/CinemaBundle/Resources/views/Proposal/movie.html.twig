{% extends 'ValiknetCinemaBundle:layouts:layout.html.twig' %}

{% block title %}
    Сторінка пропозиції фільму
{% endblock %}

{% block content %}
    <div class="row">
        <h3>Форма для добавлення фільму</h3>
        {{ form_start(form) }}
        <div class="alert">
            {{ form_errors(form) }}
        </div>

        <div class="col-lg-12">
            {{ form_label(form.movie.name) }}
            {{ form_widget(form.movie.name) }}
        </div>

        <div class="col-lg-6">
            {{ form_label(form.movie.basePoster) }}
            {{ form_widget(form.movie.basePoster) }}
        </div>

        <div class="col-lg-6">
            {{ form_label(form.movie.type) }}
            {{ form_widget(form.movie.type) }}
        </div>

        <div class="col-lg-12">
            {{ form_label(form.movie.description) }}
            {{ form_widget(form.movie.description) }}
        </div>

        <div class="col-lg-12">
            {{ form_label(form.movie.country) }}
            {{ form_widget(form.movie.country) }}
        </div>

        <div class="col-lg-12">
            {{ form_label(form.movie.releasedAt) }}
            {{ form_widget(form.movie.releasedAt) }}
        </div>

        <div class="col-lg-12">
            {{ form_label(form.movie.categories) }}
            {{ form_widget(form.movie.categories) }}
        </div>

        <div class="col-lg-12">
            {{ form_label(form.movie.director) }}
            {{ form_widget(form.movie.director) }}
        </div>

        <div class="col-lg-12">
            {{ form_label(form.movie.actors) }}
            {{ form_widget(form.movie.actors) }}
        </div>

        <div class="col-lg-12">
            {{ form_label(form.movie.trailer) }}
            {{ form_widget(form.movie.trailer) }}
        </div>

        <div class="col-lg-12">
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
        </div>

        <div class="col-lg-12">
            <button type="submit" class="btn btn-default">Запропонувати</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}